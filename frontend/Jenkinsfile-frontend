pipeline{
    agent any

    stages {
        stage('build image') {
            steps {
                sh 'sudo docker rmi -f prasanth/frontend'
                sh 'cd frontend && sudo docker build -t prasanthrk/frontend .'
            }
        }
        stage('app deploy') {
            steps {
                sh 'sudo docker container rm --force frontend'
                sh 'sudo docker run -dt --name frontend -p 80:80 prasanthrk/frontend'
         }
      }
   }
}
