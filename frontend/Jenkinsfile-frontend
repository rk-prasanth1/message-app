pipeline{
    agent {
      label 'chat-app'
    }

    environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerid')
     registry = "prasanthrk/frontend:1.0.0"
        registryCredential = 'dockerid'
        dockerImage = ''
    }

    stages {
        stage('slack notification') {
            steps {
                slackSend channel: 'chatapplication', color: 'ffff00', message: "SlackSend 'Frontend pipeline has been started ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)'"
            }
        }

        stage('sonar analysis') {
            steps {
               sh 'cd frontend && sudo docker run --rm -e SONAR_HOST_URL="http://15.207.247.104:9000" -e SONAR_TOKEN=sqp_58809e7f1a0bd33395bcafe74e93057aed2673e1 -v ".:/usr/src" sonarsource/sonar-scanner-cli "-Dsonar.projectKey=chat-app"'
             }   
        }

        stage('build image') {
            steps {
                sh 'sudo docker rmi -f prasanth/frontend'
                sh 'cd frontend && sudo docker build -t prasanthrk/frontend:1.0.0 .'
            }
        }

        stage('docker image for nexus ') {
            steps {
                sh 'sudo docker login http://15.207.247.104:8081 -u admin -p rk@098rk'
                sh 'cd frontend && sudo docker tag prasanthrk/frontend:1.0.0 http://15.207.247.104:8081/repository/chat-application/prasanthrk/frontend:1.0.0'
                sh 'sudo docker push http://15.207.247.104:8081/repository/chat-application/prasanthrk/frontend:1.0.0
            }
        }

        stage('docker-login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('pushing image to dockerhub') {
            steps {
                  sh 'sudo docker push prasanthrk/frontend:1.0.0'
            }
        }

        stage('Remove old images') {
             steps {
                 sh 'sudo docker rmi -f prasanthrk/frontend:1.0.0'
            }
        }

        stage('app deploy') {
            steps {
                sh 'sudo docker container rm --force frontend'
                sh 'sudo docker run -dt --name frontend -p 80:80 prasanthrk/frontend:1.0.0'
         }
      }
   }
post {
success {
    script {
        slackSend(
            channel: 'chatapplication',
            color: 'good',
            message: 'hi..CONGRATULATIONS frontend job is success !!! frontend build got succeeded Thanks...prasanth',
            tokenCredentialId: 'jenkin-project'
        )

        emailext body: 'Frontend chat application job got succeed.$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS Check console output at $BUILD_URL to view the results.. Thankyou prasanth',
            recipientProviders: [developers()],
            subject: 'chat app build got successed',
            to: 'prasanth.rk66@gmail.com'
    }
}
    failure {
        script {
            slackSend(
                channel: 'chatapplication',
                color: 'danger',
                message: 'frontend job got failed. Please check the build logs for more details. Thanks...prasanth',
                tokenCredentialId: 'jenkin-project'

            )
            emailext body: 'Frontend chat application job got Failed.$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS Check console output at $BUILD_URL to view the results.. Thankyou prasanth',
            recipientProviders: [developers()],
            subject: 'chat app build got failed',
            to: 'prasanth.rk66@gmail.com'
        }
    }
}
}
