pipeline{
    agent any

    stages {
        stage('sonar analysis') {
            steps {
                sh 'cd frontend && sudo docker run --rm -e SONAR_HOST_URL="http://13.234.116.42:9000" -e SONAR_TOKEN=sqp_dfab7ccebe801dcbb6480f4181e42b326b16dbcc -v ".:/usr/src" sonarsource/sonar-scanner-cli "-Dsonar.projectKey=chat-frontend"'
             }   
        }

        stage('build image') {
            steps {
                sh 'sudo docker rmi -f prasanth/frontend'
                sh 'cd frontend && sudo docker build -t prasanthrk/frontend .'
            }
        }
        stage('app deploy') {
            steps {
                sh 'sudo docker container rm --force frontend'
                sh 'sudo docker run -dt --name frontend -p 80:80 prasanthrk/frontend'
         }
      }
   }
}
