pipeline{
    agent any
    environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerid')
     registry = "prasanthrk/backend"
        registryCredential = 'dockerid'
        dockerImage = ''
    }
    stages {
        stage('build image') {
            steps {
                sh 'sudo docker rmi -f prasanth/backend'
                sh 'cd backend && sudo docker build -t prasanthrk/backend .'
            }
        }

        stage('docker-login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('pushing image to dockerhub') {
            steps {
                  sh 'sudo docker push prasanthrk/backend'
            }
        }

        stage('Remove old images') {
             steps {
                 sh 'sudo docker rmi -f prasanthrk/backend'
            }
        }

        stage('Deploy to container') {
            steps {
                sh 'cd backend && kubectl apply -f postgres-pv.yaml'
                sh 'cd backend && kubectl apply -f postgres-pvc.yaml'
                sh 'cd backend && kubectl apply -f postgres-deployment.yaml'
                sh 'cd backend && kubectl apply -f postgres-cluster.yaml'
                sh 'cd backend && kubectl apply -f backend-deployment.yaml'
                sh 'cd backend && kubectl apply -f backend-load-balancer.yaml'
                sh 'kubectl rollout restart deployment backend-deployment'
            }
        }
    }
}
